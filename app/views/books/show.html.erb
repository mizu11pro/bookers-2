<%= flash[:notice] %>

<%= render 'books/list', book: @newbook, user: @book.user %>

<h1>Book detail</h1>
<%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
<p><%= link_to @user.name, user_path(@user) %></p>
<p><%= link_to @book.title, book_path(@book) %></p>
<p><%= @book.body %></p>

<% if @book.user == current_user %>
<%= link_to "Edit", edit_book_path(@book) %>
<%= link_to "Destroy", book_path(@book), method: :delete %>
<% else %>
<% end %>