<main>
  <%= render 'books/error_message', book: book %>
  <div class="container px-5 px-sm-0">
    <div class="row">
     <div class="col-md-3">
      
      <h2>User info</h2>
       <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
       <tbody>
        <tr></tr>
        
        <tr>
        <th>name</th>
        <th><%= user.name %></th>
        </tr>
        
        <tr>
         <th>Introduction</th>
         <th><%= user.introduction %></th>
        </tr>
       </tbody>
      </table>
      
       <div class="row">
       <%= link_to class="btn btn-outline-secondary btn-block fas fa-user-cog"edit_user_path(current_user) do %>
       <i class="fas fa-user-cog"></i>
       <% end %>
       </div>

       <h2 class="mt-3">New book</h2>

      <%= form_with model:book, local:true do |f| %>

      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>opinion</h4>
      <%= f.text_area :body %>

      <%= f.submit 'create book'%>
      <% end %>
     </div>
    </div>
  </div>
</main>

