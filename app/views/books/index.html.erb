<%= render 'books/list', book: @book, user: @user %>

<h1>Books</h1>
<h2>Title</h2>
<h2>Opinion</h2>
<% @books.each do |book| %>
<%= link_to user_path(book.user) do %>
<%= attachment_image_tag book.user, :profile_image, :fill, 40, 48, format: 'jpeg', fallback: "no_image.jpg" %>
 <% end %>
<%= link_to book.title, book_path(book.id) %>
<%= book.body %>
<% end %>