<%= render 'books/list', book: @book, user: @user %>

<div class="col-md-8 offset-md-1">
<h2>Books</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Opinion</th>
                <th col-span="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @books.each do |book| %>
            <tr>
                <th><%= link_to user_path(book.user) do %>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 40, 48, format: 'jpeg', fallback: "no_image.jpg" %>
                    <% end %></th>
                <th><%= link_to book.title, book_path(book.id) %></th>
                <th><%= book.body %></th>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>




