<%= render 'users/error_message', user: @user %>

<h1>User info</h1>
<%= form_with model:@user, local:true do |f| %>
<label for="inputName">Name</label>
<%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"" %>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
<label for="inputImage">Image</label>
<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
<label for="inputIntroduction">Introduction</label>
<%= f.text_area :introduction, autofocus: true, placeholder:"" %>
<%= f.submit "Update user" %>
<% end %>