<%= render 'books/list', book: @book, user: @user %>

<div class="col-md-8 pffset-md-1">
   <h2>Books</h2>
   <table class="table-hover table-inverse">
       <thead>
           <tr>
               <th>Title</th>
               <th>Opinion</th>
               <th col-span="3"></th>
           </tr>
       </thead>
       <tbody>
         <% @books.each do |book| %>
          <tr>
              <td>
                <%= link_to user_path(@user) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg',  fallback: "no_image.jpg" %>
                <% end %>
                </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
          </tr>
         <% end %>
       </tbody>
   </table>
</div>